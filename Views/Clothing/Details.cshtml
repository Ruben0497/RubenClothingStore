@model RubenClothingStore.Models.ClothingItem

@{
    ViewData["Title"] = "Clothing Item Details";
}

<h2>@Model.Name</h2>

<div class="mb-4">
    @if (Model.ImageData != null)
    {
        var base64 = Convert.ToBase64String(Model.ImageData);
        var imgSrc = $"data:{Model.ImageMimeType};base64,{base64}";
        <img src="@imgSrc" alt="@Model.Name" style="max-width: 300px;" />
    }
    else
    {
        <p>No image available</p>
    }
</div>

<div class="mb-3">
    <strong>Price:</strong> $@Model.Price
</div>

<div class="mb-3">
    <strong>Size:</strong> @Model.Size
</div>

<div class="mb-3">
    <strong>Description:</strong><br />
    @Model.Description
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>


<dl class="row mt-3">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Size</dt>
    <dd class="col-sm-10">@Model.Size</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("F2")</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
