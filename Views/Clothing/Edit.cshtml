@model RubenClothingStore.Models.ClothingItem

@{
    ViewData["Title"] = "Edit Clothing Item";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Size" class="form-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label>Current Image</label><br />
        @if (Model.ImageData != null)
        {
            var base64 = Convert.ToBase64String(Model.ImageData);
            var imageSrc = $"data:{Model.ImageMimeType};base64,{base64}";
            <img src="@imageSrc" alt="@Model.Name" style="max-width: 200px;" />
        }
        else
        {
            <p>No image uploaded.</p>
        }
    </div>

    <div class="form-group mb-4">
        <label for="imageFile" class="form-label">Upload New Image (optional)</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
