@model List<RubenClothingStore.Models.ClothingItem>

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Welcome to Ruben Clothing Store</h2>

<div class="hero-section text-white text-center" style="background: url('/images/bg.jpg') no-repeat center center; background-size: cover; height: 90vh;">
    <div class="d-flex h-100 align-items-center justify-content-center flex-column">
        <h1 class="display-3 fw-bold">Shop With Us</h1>
        <p class="lead">IT'S NOT ABOUT THE BRAND, IT'S ABOUT STYLE</p>
        <div>
            <a class="btn btn-outline-light btn-lg me-3" asp-controller="Clothing" asp-action="Index">SHOP NOW</a>
            <a class="btn btn-outline-light btn-lg me-3" asp-controller="Account" asp-action="Register">SIGN UP NOW</a>
        </div>
    </div>
</div>

<!-- Carousel Product Section -->
<section class="py-5 bg-light text-center">
    <h2 class="mb-4">Our Products</h2>

    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                var chunks = Model.Chunk(3).ToList(); // Split the product list into chunks of 3
                for (int i = 0; i < chunks.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="d-flex justify-content-center gap-4 flex-wrap">
                            @foreach (var item in chunks[i])
                            {
                                <div class="card" style="width: 18rem;">
                                    @if (item.ImageData != null)
                                    {
                                        var base64 = Convert.ToBase64String(item.ImageData);
                                        var imgSrc = $"data:{item.ImageMimeType};base64,{base64}";
                                        <img class="card-img-top" src="@imgSrc" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <p class="card-text">@item.Description</p>
                                        <p class="card-text"><strong>$@item.Price.ToString("F2")</strong></p>
                                        <a asp-controller="Clothing" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
