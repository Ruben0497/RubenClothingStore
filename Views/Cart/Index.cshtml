@model List<RubenClothingStore.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
                <th>Price</th>
                <th style="width:220px;">Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.Size ?? "-")</td>
                <td>$@item.Price.ToString("F2")</td>

                <td>
                    <div class="input-group" style="max-width:220px">
                        <!-- − -->
                        <form asp-action="Decrement" asp-controller="Cart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.ClothingItemId" />
                            <input type="hidden" name="size" value="@item.Size" />
                            <button type="submit" class="btn btn-outline-secondary">−</button>
                        </form>

                        <!-- numeric input (auto-submits on change) -->
                        <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-inline qty-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.ClothingItemId" />
                            <input type="hidden" name="size" value="@item.Size" />
                            <input name="quantity"
                                   type="number"
                                   min="1"
                                   value="@item.Quantity"
                                   class="form-control text-center"
                                   style="width:80px;" />
                        </form>

                        <!-- + -->
                        <form asp-action="Increment" asp-controller="Cart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.ClothingItemId" />
                            <input type="hidden" name="size" value="@item.Size" />
                            <button type="submit" class="btn btn-outline-secondary">+</button>
                        </form>
                    </div>
                </td>

                <td>$@((item.Price * item.Quantity).ToString("F2"))</td>

                <td>
                    <!-- Remove this line item -->
                    <form asp-action="Remove" asp-controller="Cart" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.ClothingItemId" />
                        <input type="hidden" name="size" value="@item.Size" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h4>Total: $@Model.Sum(i => i.Price * i.Quantity).ToString("F2")</h4>

    <form asp-action="Clear" asp-controller="Cart" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
    </form>
    <a class="btn btn-outline-secondary" asp-controller="Clothing" asp-action="Index">Continue Shopping</a>

    <div class="mt-3">
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Go to Checkout</a>
    </div>
}

@section Scripts{
<script>
  // Auto-submit quantity form when the number changes
  document.querySelectorAll('.qty-form input[name="quantity"]').forEach(function (el) {
    el.addEventListener('change', function () {
      // clamp min 1 on the client side too
      if (this.value < 1) this.value = 1;
      this.closest('form').submit();
    });
  });
</script>
}
