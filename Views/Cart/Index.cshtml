@model List<RubenClothingStore.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Item.Name</td>
                    <td>@item.Item.Size</td>
                    <td>$@item.Item.Price.ToString("F2")</td>
                    <td>@item.Quantity</td>
                    <td>$@((item.Item.Price * item.Quantity).ToString("F2"))</td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="/Cart/Remove/@item.Item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: $@Model.Sum(i => i.Item.Price * i.Quantity).ToString("F2")</h4>

    <a class="btn btn-outline-danger" href="/Cart/Clear">Clear Cart</a>
    <a class="btn btn-outline-secondary" href="/Clothing">Continue Shopping</a>

    <div class="mt-3">
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Go to Checkout</a>
    </div>
}
