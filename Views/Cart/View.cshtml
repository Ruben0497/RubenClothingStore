@model List<RubenClothingStore.Models.ClothingItem>

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Size</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var base64 = Convert.ToBase64String(item.ImageData ?? new byte[0]);
                var imageSrc = item.ImageData != null
                ? $"data:{item.ImageMimeType};base64,{base64}"
                : "/images/default.png";

                <tr>
                    <td><img src="@imageSrc" alt="@item.Name" style="width: 80px;" /></td>
                    <td>@item.Name</td>
                    <td>@item.Size</td>
                    <td>$@item.Price</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Total:</strong> $@Model.Sum(i => i.Price)</p>
    <a href="/Payment/Checkout" class="btn btn-success">Proceed to Checkout</a>
}
