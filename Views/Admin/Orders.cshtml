@model List<RubenClothingStore.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h2 class="mb-4">All Orders</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No orders found.</div>
}
else
{
    foreach (var order in Model)
    {
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                <strong>Order ID:</strong> @order.Id |
                <strong>User:</strong> @order.User?.FullName |
                <strong>Date:</strong> @order.OrderDate.ToString("dd MMM yyyy hh:mm tt") |
                <strong>Total:</strong> $@order.TotalAmount.ToString("F2")
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item</th>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.Items)
                        {
                            <tr>
                                <td>@item.ClothingItem?.Name</td>
                                <td>@item.ClothingItem?.Size</td>
                                <td>$@item.Price.ToString("F2")</td>
                                <td>@item.Quantity</td>
                                <td>$@( (item.Price * item.Quantity).ToString("F2") )</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
