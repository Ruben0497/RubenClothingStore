@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input name="email" class="form-control" type="email" required />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3 mb-2">Login</button>
</form>

<p class="mt-3">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up here</a>.</p>
<p class="mt-3">Forgot your password? <a asp-controller="Account" asp-action="ForgotPassword">Reset it here</a>.</p>