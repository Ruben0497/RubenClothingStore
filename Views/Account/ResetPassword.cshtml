@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-action="ResetPassword" class="mt-4">
    <input type="hidden" name="token" value="@ViewBag.Token" />

    <div class="form-group mb-3">
        <label for="newPassword">New Password</label>
        <input name="newPassword" id="newPassword" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Change Password</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}

<div class="mt-3">
    <a href="@Url.Action("Login", "Account")">Back to Login</a>
</div>
